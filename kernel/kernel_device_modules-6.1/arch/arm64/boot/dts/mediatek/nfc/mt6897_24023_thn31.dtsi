&odm {
        nfc_chipset:nfc_chipset {
                compatible = "oplus-nfc-chipset";
                chipset-24023 = "THN31";

        };
};


&i2c3 {
       status = "okay";
       clock-frequency = <400000>;

       tms_thn31@28 {
               compatible = "tms,nfc";
               reg = <0x28>;
               tms,irq-gpio = <&pio  37 0x0>;
               tms,ven-gpio = <&pio 36 0x0>;
               tms,download-gpio = <&pio 121 0x0>;
               //pn544-clkreq = <&pio 151 0x0>;
               interrupt-parent = <&pio>;
       };
};
&spi3 {
       status = "okay";
       #address-cells = <1>;
       #size-cells = <0>;
       spidev1: ese@1 {
       compatible = "tms,ese";
       reg = <0>;
       spi-max-frequency = <8000000>;
       tms,device-name    = "tms_ese";
       tms,device-count   = <1>;
       };
};
